<header>
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      <!-- Brand -->
      <a class="navbar-brand title font-weight-lighter" href="{{ '/' | relative_url }}">
        {% if site.title == 'blank' %}
          {% if site.first_name %}<span class="font-weight-bold">{{- site.first_name -}}</span>{% endif %}
          {% if site.middle_name %} {{- site.middle_name -}}{% endif %}
          {% if site.last_name %} {{- site.last_name -}}{% endif %}
        {% else %}
          {{- site.title -}}
        {% endif %}
      </a>

      <!-- Toggle -->
      <button class="navbar-toggler collapsed ml-auto" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <!-- Links -->
      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">

          <!-- Projects -->
          <li class="nav-item {% if page.url contains '/projects' %}active{% endif %}">
            <a class="nav-link" href="{{ site.projects_url | default: '/projects/' | relative_url }}">
              Projects
              {% if page.url contains '/projects' %}<span class="sr-only">(current)</span>{% endif %}
            </a>
          </li>

          <!-- Resume -->
          <li class="nav-item">
            <a class="nav-link" href="{{ site.resume_url | default: '/assets/resume.pdf' | relative_url }}" target="_blank" rel="noopener">
              Resume
            </a>
          </li>

          <!--GitHub -->
          <li class="nav-item {% if page.url contains '/GitHub' %}active{% endif %}">
            <a class="nav-link" href="{{ site.GitHub_url | default: '/GitHub/' | relative_url }}">
              GitHub
              {% if page.url contains '/GitHub' %}<span class="sr-only">(current)</span>{% endif %}
            </a>
          </li>


          <!-- More (optional; driven by _config.yml > more_links) -->
          {% if site.more_links and site.more_links.size > 0 %}
          <li class="nav-item dropdown {% if page.more_active %}active{% endif %}">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
               aria-haspopup="true" aria-expanded="false">More</a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              {% for item in site.more_links %}
                {% if item.title == 'divider' %}
                  <div class="dropdown-divider"></div>
                {% else %}
                  <a class="dropdown-item" href="{{ item.url | relative_url }}" {% if item.external %}target="_blank" rel="noopener"{% endif %}>
                    {{ item.title }}
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </li>
          {% endif %}

          {% if site.enable_navbar_social %}
            <li class="nav-item">
              <div class="navbar-brand social">{% include social.liquid %}</div>
            </li>
          {% endif %}

        </ul>
      </div>
    </div>
  </nav>

  {% if site.enable_progressbar %}
  <progress id="progress" value="0">
    <div class="progress-container"><span class="progress-bar"></span></div>
  </progress>
  {% endif %}
</header>
